{
  "name": "bold-ui",
  "version": "2.0.0-beta",
  "license": "MIT",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "homepage": "https://bold.bridge.ufsc.br",
  "engines": {
    "node": ">=14"
  },
  "keywords": [
    "react",
    "bold-ui",
    "bold design system"
  ],
  "files": [
    "lib",
    "icons"
  ],
  "repository": {
    "url": "https://github.com/laboratoriobridge/bold"
  },
  "sideEffects": false,
  "scripts": {
    "start": "yarn clean && tsc --watch",
    "clean": "rm -rf lib",
    "build": "yarn clean && tsc --p ./tsconfig.build.json && vite build",
    "prepublishOnly": "yarn build",
    "test": "yarn lint && TZ=UTC jest",
    "test:loki": "STORYBOOK_LOKI=true build-storybook && loki --requireReference --reactUri file:./storybook-static",
    "test:watch": "TZ=UTC jest --watch --collectCoverage=false",
    "lint": "eslint 'src/**/*.tsx' 'src/**/*.ts'",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "icons": "yarn icons:clean && yarn icons:svgr && yarn icons:index",
    "icons:clean": "rm -rf ./src/components/Icon/generated",
    "icons:svgr": "svgr --ext tsx --icon --template ./tools/IconTemplate.js --svgo-config svgo.config.json -d ./src/components/Icon/generated ./icons",
    "icons:index": "babel-node ./tools/generateIconsIndex.js",
    "now-build": "yarn --cwd site install && yarn build && yarn site:export",
    "sonar": "sonar-scanner",
    "site:start": "yarn --cwd site start",
    "site:build": "yarn --cwd site build",
    "site:export": "yarn site:build && touch site/public/.nojekyll && cp site/src/CNAME site/public/CNAME && build-storybook -o site/public/storybook",
    "site:deploy": "yarn site:export && gh-pages -d site/public -t"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "dependencies": {
    "@emotion/css": "^11.11.2",
    "@emotion/react": "^11.11.4",
    "@popperjs/core": "^2.11.8",
    "csstype": "^3.1.3",
    "downshift": "^9.0.2",
    "focus-trap-react": "^10.2.3",
    "match-sorter": "^6.3.4",
    "react": "^18.2.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-popper": "^2.3.0",
    "react-text-mask": "^5.5.0",
    "react-transition-group": "^4.4.5",
    "text-mask-addons": "^3.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.3",
    "@emotion/jest": "^11.11.0",
    "@storybook/addon-essentials": "^8.0.6",
    "@storybook/addon-interactions": "^8.0.6",
    "@storybook/addon-links": "^8.0.6",
    "@storybook/addon-onboarding": "^8.0.6",
    "@storybook/blocks": "^8.0.6",
    "@storybook/react": "^8.0.6",
    "@storybook/react-vite": "^8.0.6",
    "@storybook/test": "^8.0.6",
    "@testing-library/react": "^14.2.2",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.0",
    "@types/node": "^20.12.3",
    "@types/prop-types": "^15.7.12",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@types/react-text-mask": "^5.4.14",
    "@types/react-transition-group": "^4.4.10",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "@vitejs/plugin-react": "^4.2.1",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "eslint-plugin-storybook": "^0.8.0",
    "gh-pages": "^6.1.1",
    "husky": "^9.0.11",
    "intl": "^1.2.5",
    "jest": "^29.7.0",
    "jest-cli": "^29.7.0",
    "jest-emotion": "^11.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "lodash": "^4.17.21",
    "loki": "^0.35.0",
    "mockdate": "^3.0.5",
    "prettier": "^3.2.5",
    "pretty-quick": "^4.0.0",
    "prop-types": "^15.8.1",
    "react-test-renderer": "^18.2.0",
    "storybook": "^8.0.6",
    "ts-jest": "^29.1.2",
    "typescript": "^5.2.2",
    "url-loader": "^4.1.1",
    "vite": "^5.2.0",
    "vite-plugin-dts": "^3.8.1",
    "waait": "^1.0.5"
  },
  "loki": {
    "configurations": {
      "chrome.laptop": {
        "target": "chrome.docker",
        "width": 1366,
        "height": 768,
        "deviceScaleFactor": 1,
        "mobile": false,
        "chromeRetries": 3
      }
    }
  }
}
