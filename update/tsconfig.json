{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "types": ["jest"],
    "outDir": "lib",
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    // "sourceMap": true,
    "declaration": true,
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictNullChecks": false,
    "noImplicitAny": false
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts*",
    "**/__tests__",
    "**/__mocks__",
    "node",
    "target",
    "lib",
    "build",
    "coverage",
    "site"
  ]
}
